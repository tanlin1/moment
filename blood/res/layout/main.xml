<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/holo_purple"
		>
	<ImageView android:layout_width="match_parent"
	           android:layout_height="300dp"
	           android:id="@+id/MainView"

			/>
	<RelativeLayout android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:id="@+id/test_relative_layout"
	                android:padding="6dp"
	                android:layout_margin="1dp"
			>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="@string/text_name"
				android:id="@+id/text_name"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="20dp"
				/>
		<EditText android:layout_width="200dp"
		          android:layout_height="30dp"
		          android:singleLine="true"
		          android:hint="@string/Edit_Name"
		          android:id="@+id/edit_set_name"
		          android:background="@drawable/background"
		          android:layout_marginTop="20dp"
		          android:layout_toRightOf="@id/text_name"
		          android:layout_marginLeft="10dp"
				/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/text_set_password"
				android:id="@+id/text_password"
				android:textSize="20sp"
				android:layout_alignLeft="@id/text_name"
				android:layout_below="@id/text_name"
				android:layout_marginTop="21dp"
				/>
		<EditText android:layout_width="200dp"
		          android:layout_height="30dp"
		          android:singleLine="true"
		          android:password="true"
		          android:hint="@string/Edit_Password"
		          android:id="@+id/edit_set_password"
		          android:background="@drawable/background"
		          android:layout_below="@id/edit_set_name"
		          android:layout_marginTop="15dp"
		          android:layout_alignLeft="@id/edit_set_name"
				/>
		<Button
				android:layout_width="99sp"
				android:layout_height="30sp"
				android:id="@+id/button_login"
				android:text="@string/button_login"
				android:background="@drawable/press"
				android:textSize="20sp"
				android:layout_below="@id/edit_set_password"
				android:layout_marginTop="10dp"
				android:layout_alignRight="@id/edit_set_password"
				/>
		<Button
				android:layout_width="99sp"
				android:layout_height="30sp"
				android:id="@+id/button_register"
				android:textSize="20sp"
				android:text="@string/button_register"
				android:layout_toLeftOf="@id/button_login"
				android:layout_marginRight="5dp"
				android:background="@drawable/press"
				android:layout_alignLeft="@id/edit_set_password"
				android:layout_alignBottom="@id/button_login"
				android:layout_alignTop="@id/button_login"
				/>
	</RelativeLayout>
</LinearLayout>

