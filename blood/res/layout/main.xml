<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/holo_purple"
		>
	<ImageView android:layout_width="match_parent"
	           android:layout_height="340dp"
	           android:id="@+id/MainView"

			/>
	<RelativeLayout android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:id="@+id/test_relative_layout"
	                android:padding="6dp"
	                android:layout_margin="1dp"
			>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="@string/name_view"
				android:id="@+id/text_name"
				android:layout_marginLeft="5dp"
				android:layout_marginTop="15dp"
				/>
		<EditText android:layout_width="200dp"
		          android:layout_height="30dp"
		          android:singleLine="true"
		          android:hint="@string/name_edit"
		          android:id="@+id/set_name"
		          android:background="@drawable/background"
		          android:layout_marginTop="15dp"
		          android:layout_toRightOf="@id/text_name"
		          android:layout_marginLeft="10dp"
				/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/set_password_view"
				android:id="@+id/text_password"
				android:textSize="20sp"
				android:layout_alignLeft="@id/text_name"
				android:layout_below="@id/text_name"
				android:layout_marginTop="15dp"
				/>
		<EditText android:layout_width="200dp"
		          android:layout_height="30dp"
		          android:singleLine="true"
		          android:password="true"
		          android:hint="@string/password_edit"
		          android:id="@+id/set_password"
		          android:background="@drawable/background"
		          android:layout_below="@id/set_name"
		          android:layout_marginTop="14dp"
		          android:layout_alignLeft="@id/set_name"
				/>

		<CheckBox android:layout_width="29dp"
		          android:layout_height="16dp"
		          android:checked="false"
		          android:layout_below="@id/set_password"
		          android:layout_alignLeft="@id/set_password"
		          android:layout_marginTop="5dp"
		          android:id="@+id/checkbox"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="@string/remember_password"
		          android:id="@+id/remember_password"
		          android:layout_toRightOf="@id/checkbox"
		          android:layout_below="@id/set_password"
		          android:layout_marginTop="5dp"
				/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:text="@string/forget_password"
		          android:layout_alignRight="@id/set_password"
		          android:layout_alignBottom="@id/remember_password"
		          android:id="@+id/forget_password"
				/>
		<Button
				android:layout_width="99sp"
				android:layout_height="30sp"
				android:id="@+id/button_login"
				android:text="@string/button_login"
				android:background="@drawable/press"
				android:textSize="20sp"
				android:layout_below="@id/forget_password"
				android:layout_marginTop="5dp"
				android:layout_alignRight="@id/set_password"
				/>
		<Button
				android:layout_width="99sp"
				android:layout_height="30sp"
				android:id="@+id/button_register"
				android:textSize="20sp"
				android:text="@string/button_register"
				android:layout_toLeftOf="@id/button_login"
				android:layout_marginRight="5dp"
				android:background="@drawable/press"
				android:layout_alignLeft="@id/set_password"
				android:layout_alignBottom="@id/button_login"
				android:layout_alignTop="@id/button_login"
				/>
	</RelativeLayout>
</LinearLayout>

